#!/bin/bash
LOGS="/opt/logs/RVN.log.`date +%d-%b-%Y`"
RVN trade \
binance.RVN-BTC  \
--strategy=trix_max \
--period_length=3m \
--order_adjust_time=4000 \
--order_poll_time=5000 \
--max_sell_loss_pct=3 \
--profit_stop_enable_pct=0\
--profit_stop_pct=0\
--exact_buy_orders \
--exact_sell_orders \
--markdown_buy_pct=0.28 \
--markup_sell_pct=0.27 \
--max_slippage_pct=25 \
--sell_pct=100 --buy_pct=100 2>&1 | tee $LOGS
#--min_prev_trades=10 \
#--use_prev_trades \
#--markdown_buy_pct=0.67 \
#--markup_sell_pct=0.57 \
#--poll_trades=2000 \
